{
    "compilerOptions": {
        "module": "es2022",
        "esModuleInterop": true,
        "target": "es2017",
        "moduleResolution": "node",
        "sourceMap": true,
        "resolveJsonModule": true,
        "baseUrl": "src",
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"],
    "lib": ["es2015"]
}
